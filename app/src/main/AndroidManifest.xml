<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.mobilemakers.adventure" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.AlleyFragmentActivity"
            android:label="Alley" />

        <activity
            android:name=".activities.RoomFragmentActivity"
            android:label="Room" />

        <activity
            android:name=".activities.LossingFragmentActivity"
            android:label="Losing" />

        <activity
            android:name=".activities.WinningFragmentActivity"
            android:label="Winning" />
    </application>

</manifest>
